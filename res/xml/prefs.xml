            android:key="blockColor3"
            android:title="@string/blockColor3_title"
            android:defaultValue="0xFFFE7443"
            android:persistent="true" />
        
        <com.robobunny.SeekBarPreference
            android:key="blockFrontVChange"
            android:title="@string/blockFrontVChange_title"
            android:summary="@string/blockFrontVChange_summary"
            android:defaultValue="@string/blockFrontVChange_default"
            android:persistent="true"
            android:max="25"
