<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:robobunny="http://robobunny.com">
    <PreferenceCategory
        android:title="@string/pref_colors_title"
        android:key="pref_key_colors"
        android:persistent="false">
        
        <yuku.ambilwarna.widget.AmbilWarnaPreference
            android:key="worldColor"
            android:title="@string/worldColor_title"
            android:defaultValue="0xFF333333"
            android:persistent="true" />
        
        <yuku.ambilwarna.widget.AmbilWarnaPreference
            android:key="blockColor1"
            android:title="@string/blockColor1_title"
            android:defaultValue="0xFFFFFFFF"
            android:persistent="true" />
        
        <yuku.ambilwarna.widget.AmbilWarnaPreference
